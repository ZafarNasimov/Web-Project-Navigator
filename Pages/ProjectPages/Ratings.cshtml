@page
@{
    ViewData["Title"] = "Ratings Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ratings Page</title>
</head>

<body>

    <div>
        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link btn-primary" href="#table" id="tableLink"
                   onclick="displayDataInTable(ratingData, ['bad', 'chats', 'good'])">Table</a>
            </li>
        </ul>
    </div>

    <a asp-page="/Index" type="button" class="btn btn-primary backButton">Back</a>

    <div class="styled-table">
        <table id="Table" class="hidden-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Bad</th>
                    <th>Chats</th>
                    <th>Good</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>

    <script src="/Scripts/ratings.js"></script>

</body>

</html>
